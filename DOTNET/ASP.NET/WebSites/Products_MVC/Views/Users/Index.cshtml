@model IEnumerable<Shop_MVC.Models.User>
@{
    ViewData["Title"] = "User list";
}

<h1>@ViewData["Title"]</h1>
<hr />
<a asp-asp-controller="users" asp-action="create">Create new user</a>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor( m =>m.UserId)</th>
        <th>@Html.DisplayNameFor( m =>m.UserName)</th>
        <th>@Html.DisplayNameFor( m =>m.PhoneNumber)</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor( m =>item.UserId)</td>
            <td>@Html.DisplayFor( m =>item.UserName)</td>
            <td>@Html.DisplayFor( m =>item.PhoneNumber)</td>
            <td>
                <a asp-asp-controller="users" asp-action="edit" asp-route-itemid="@item.UserId">Edit</a>
                <a asp-asp-controller="users" asp-action="delete" asp-route-itemid="@item.UserId">Delete</a>
            </td>
        </tr>
    }
</table>