@page "{id}"
@model Shop_RazorPages.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit product";
}

<h1>@ViewData["Title"]</h1>

<hr />

<form method="post">

    <input type="hidden" value="@Model.Product.Id"/>


    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name"  class="form-control" value="@Model.Product.Name"/>
    </div>

    <div class="form-group">
        <label>Price</label>
        <input type="number" name="price" class="form-control" value="@Model.Product.Price" />
    </div>

    <input type="submit" value="Save" class="btn-primary" />

</form>

<a href="/Products">Return to product list</a>